    <!-- js để khi người dùng upload ảnh thành công thì sẽ hiển thị nút đã tải lên -->
    <script>
        const upload = document.getElementById('upload');
        const btnUploaded = document.querySelector('.btn-upload');

        const neederUpload = document.getElementById('needer-upload');
        const btnNeederUploaded = document.querySelector('.needer');

        const btnNext = document.querySelector('.btn-next');
        const neederRegister = document.getElementsByClassName('needer-register');
        const donorSearch = document.getElementsByClassName('search-donor');

        upload.addEventListener('change', () => {
            if (upload.value) {
                btnUploaded.innerHTML = 'Đã tải lên <i class="fa-solid fa-circle-check"></i>';
            }
            else {
                btnUploaded.innerHTML = 'Tải lên ảnh <i class="fa-solid fa-circle-up"></i>';
            }
        })

        neederUpload.addEventListener('change', () => {
            if (neederUpload.value) {
                btnNeederUploaded.innerHTML = 'Đã tải lên <i class="fa-solid fa-circle-check"></i>';
            }
            else {
                btnNeederUploaded.innerHTML = 'Tải lên ảnh <i class="fa-solid fa-circle-up"></i>';
            }
        })

        btnNext.addEventListener('click', () => {
            
