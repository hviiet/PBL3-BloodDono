                    <!-- Thông tin cá nhân người đăng kí cho người cần máu -->
                    <fieldset>
                        <legend>THÔNG TIN CÁ NHÂN NGƯỜI ĐĂNG KÍ</legend>
                        <div class="box">
                            <!-- Phần input -->
                            <div class="representative">
                                <label for="name">Họ và tên</label> <br>
                                <input type="text" name="" id="name" class="customize representative-name" required>
    
                                <div class="identify box-116">
                                    <label for="">Số CMND/CCCD</label> <br>
                                    <input type="file" name="representative-upload" id="upload" accept="image/*" required>
    
                                    <!-- label đè lên input:file để làm cái nút upload -->
                                    <label for="upload" class="btn-upload">Tải lên ảnh <i class="fa-solid fa-circle-up"></i></label>  
                                </div>
                            </div>
                            <!-- ------------------------------- -->
    
    
                            <div class="description">
                                <p style="font-weight: 500;">MÔ TẢ</p>
                                <p>Mục này dành cho người đăng ký tìm kiếm người hiến máu.</p>
                                <p>Hãy điền các thông tin cần thiết bên dưới trước khi sang mục khác.</p>
                            </div>
                        </div>
                    </fieldset>
                    <!-- --------------------------------------------- -->
    
                    <!-- Thông tin người cần máu -->
                    <fieldset>
                        <legend style="width: 340px;">THÔNG TIN NGƯỜI ĐƯỢC HIẾN</legend>
                        <div class="row">
                            <!-- Họ tên người cần máu -->
                            <div class="block-needer-name">
                                <label for="name">Họ và tên</label> <br>
                                <input type="text" name="" id="name" class="customize needer-name" required>
                            </div>
                            <!-- ------------------------------- -->
    
                            <!-- Phần mô tả không cần quan tâm -->
                            <div class="description">
                                <p style="font-weight: 500;">MÔ TẢ</p>
                                <p>Mục này dành cho người cần nguồn hiến. Hãy điền đầy đủ các thông tin dưới.</p>
                            </div>
                            <!-- ------------------------------- -->
                        </div>
    
                        <div class="row">
    
                            <div class="identify box-116">
                                <label for="">Số CMND/CCCD</label> <br>
                                <input type="file" name="needer-upload" id="needer-upload" accept="image/*" required>
    
                                <!-- label đè lên input:file để làm cái nút upload -->
                                <label for="needer-upload" class="btn-upload needer">Tải lên ảnh <i class="fa-solid fa-circle-up"></i></label>
                            </div>
    
                            <div class="date-of-birth box-270">
                                <label for="">Ngày sinh</label> <br>
                                <input type="date" name="" id="" class="needer-date-of-birth" required>
                            </div>
    
                            <!-- Nhóm máu -->
                            <div class="bloodtype">
                                <label for="">Nhóm máu</label> <br>
                                <select id="needer-blood-type"name="blood-type" required>
                                    <option value="" disabled selected></option>
                                    <optgroup label="Nhóm máu A">
                                        <option value="A+">A+</option>
                                        <option value="A-">A-</option>
                                      </optgroup>
                                      <optgroup label="Nhóm máu B">
                                        <option value="B+">B+</option>
                                        <option value="B-">B-</option>
                                      </optgroup>
                                      <optgroup label="Nhóm máu AB">
                                        <option value="AB+">AB+</option>
                                        <option value="AB-">AB-</option>
                                      </optgroup>
                                      <optgroup label="Nhóm máu O">
                                        <option value="O+">O+</option>
                                        <option value="O-">O-</option>
                                      </optgroup>
                                </select>
                            </div>
                            <!-- ------------------------------- -->
    
                        </div>
    
                        <!-- Chọn địa điểm -->
                        <label for="">Chọn nơi hiến</label>
                        <div class="row hospital-address">
                            <input type="text" name="" id="" placeholder="Tên bệnh viện" class="hospital-name" required>
                            <input type="text" name="" id="" placeholder="Xã/phường" required>
                            <input type="text" name="" id="" placeholder="Quận/huyện" required>
                            <input type="text" name="" id="" placeholder="Tỉnh/thành phố" required>
                        </div>
                        <!-- ------------------------------- -->
    
                        <!-- Lời nhắn -->
                        <div class="row">
                            <div class="message">
                                <label for="">Lời nhắn</label> <br>
                                <textarea name="" id="" cols="30" rows="10"></textarea>
                            </div>
                        </div>
                        <!-- ------------------------------- -->
    
                    </fieldset>
                    <!-- --------------------------------------------- -->
    
                    <button class="btn-next">Tiếp theo <i class="fa-solid fa-circle-right"></i></button>
                </form>
            </section>

